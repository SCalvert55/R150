#include <max6675.h>

const int heatp = 4;

const int heater_cs = 15;  // Heater monitoring thermocouple
const int shared_clk = 13;
const int shared_do = 12;


void setup() {
  Serial.begin(9600);
  pinMode(heatp, OUTPUT);
  digitalWrite(heatp, 0);
}

void loop() {
  if (Serial.available()) {
        String command = Serial.readStringUntil('\n');
        command.trim();
        if (command == "1"){
          digitalWrite(heatp, HIGH);
          Serial.println("heater turned on");
        }

        if (command == "0"){
          digitalWrite(heatp, LOW);
          Serial.println("heater turned off");
        }
    }
}
